@*define model*@
@model IEnumerable<Movie>

@*define the view data*@
@ViewData["Title"] = "List of Cinemas"

@*whrite the code*@
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 mb-3">
            <div class="card">
                <img src="@item.ImageURL" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><b>Cinema: </b>@item.Cinema.Name</p>
                    <p class="card-text"><b>Category: </b>@item.MyCategory</p>
                    <p class="card-text"><b>Start Date: </b>@item.StartDate.ToString("dd MMM yy")</p>
                    <p class="card-text"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>
                    <p class="card-text">
                        <b>Status: </b>
                        @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                        {
                            <span class="badge bg-success">AVAILABLE</span>
                        }
                        else if (DateTime.Now > item.EndDate)
                        {
                            <span class="badge bg-danger">EXPIRED</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">UPCOMING</span>
                        }
                    </p>
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="#"><i class="bi bi-eye-fill"></i> Show Details</a>
                        <a class="btn btn-success"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

